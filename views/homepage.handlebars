{{#each posts as |post| }}
    <div class="container">
        <div class="row justify-content-center">
            <div class="card col-md-8 mt-3 mb-3">
                <h5 class="card-header"><a href="/posts/{{post.id}}">{{post.post_title}}</a></h5>
                <p class="card-text">{{post.post_text}}</p>
                <h6> Created by: {{post.user.username}}</h6>

                <a href="/api/comments/{{post.id}}" class="card-link">Comment</a>
                <a href="/api/posts/{{post.id}}" class="card-link">View</a>
            </div>
        </div>
    </div>
{{/each}}