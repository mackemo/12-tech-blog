<main class="your-posts">
    <div class="container">
        <div class="row justify-content-center">
            <h2 class="title2">Your Posts</h2>

            <!-- add post button -->
            <div class="mb-3">
                <a href="/create-post/" class="btn btn-light col-md-2">+New Post</a>
            </div>

            <!-- posts -->
            {{#each posts as |post| }}
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="card col-md-8 mt-3 mb-3">
                            <h5 class="card-header"><a href="/posts/{{post.id}}">{{post.post_title}}</a></h5>
                            <p class="card-text">{{post.post_text}}</p>
                            <h6> Created by: {{post.user.username}} at {{post.post_date}}</h6>
                        </div>
                    </div>
                </div>
            {{/each}}

        </div>
    </div> 
</main>